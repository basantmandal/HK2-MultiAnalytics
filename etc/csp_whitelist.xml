<?xml version="1.0"?>
<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:/etc/csp_whitelist.xsd">

    <policies>
        <policy id="script-src">
            <values>
                <value id="mp-csp-googleapis-js" type="host">*.googletagmanager.com</value>
                <value id="mf-fbpx-facebook-com" type="host">*.facebook.com</value>
                <value id="mf-fbpx-facebook-net" type="host">*.facebook.net</value>
                <value id="js-contentsqaure-com" type="host">*.contentsquare.com</value>
                <value id="js-contentsquare-net" type="host">*.contentsquare.net</value>
            </values>
        </policy>
        <policy id="frame-src">
            <values>
                <value id="mp-csp-googleapis-frame" type="host">*.googletagmanager.com</value>
                <value id="mf-fbpx-facebook-com" type="host">*.facebook.com</value>
                <value id="mf-fbpx-facebook-net" type="host">*.facebook.net</value>
            </values>
        </policy>
        <policy id="media-src">
            <values>
                <value id="custom-csp-googleapis-media" type="host">*.googleadservices.com</value>
                <value id="custom-csp-googleanalytics" type="host">*.google-analytics.com</value>
                <value id="custom-csp-googleapis-media-ga-ssl" type="host">*.google-analytics.com</value>
            </values>
        </policy>
        <policy id="img-src">
            <values>
                <value id="custom-csp-googleapis-media" type="host">*.googleadservices.com</value>
                <value id="custom-csp-googleanalytics" type="host">*.google-analytics.com</value>
                <value id="custom-csp-google-img-ga-ssl" type="host">*.google.com</value>
                <value id="custom-csp-googletagmanager-img" type="host">*.googletagmanager.com</value>
                <value id="mf-fbpx-facebook-com" type="host">*.facebook.com</value>
                <value id="mf-fbpx-facebook-net" type="host">*.facebook.net</value>
                <value id="js-contentsquare" type="host">*.contentsquare.net</value>
            </values>
        </policy>
        <policy id="font-src">
            <values>
                <value id="googleapis" type="host">*.googleapis.com</value>
                <value id="gstatic" type="host">*.gstatic.com</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <value id="custom-csp-googleapis-cs" type="host">*.stats.g.doubleclick.net</value>
                <value id="custom-csp-googleanalytics" type="host">*.google-analytics.com</value>
                <value id="mf-fbpx-facebook-com" type="host">*.facebook.com</value>
                <value id="mf-fbpx-facebook-net" type="host">*.facebook.net</value>
                <value id="nr-contentsuqare" type="host">*.contentsquare.net</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
